<!-- Sidebar -->
<div class="nav">
  <div class="logo">
    <a href="/"><h1>DevOps Bookmarks</h1></a>
  </div>

  <!-- Platforms menu -->
  <div class="platforms menu">
    <h3>Platform</h3>
    <% _u.each(platforms, function(tag) { %>
      <div class="tag">
        <% var active = _u.contains(tags, tag.slug); %>
        <a class="toggle" href="<%= extraUrlFor(tag.slug, tags) %>">
          <i class="fa fa-fw <%= active ? 'fa-check-circle' : 'fa-circle-o' %>"></i>
        </a>
        <a class="<%= active ? 'active' : '' %>" href="<%= onlyUrlFor(tag.slug, platforms, tags) %>">
          <i class="<%= tag.icon %>"></i>
          <%= tag.name %>
        </a>
      </div>
    <% }); %>
  </div>

  <!-- Licenses menu -->
  <div class="licenses menu">
    <h3>License</h3>
    <% _u.each(licenses, function(tag) { %>
      <div class="tag">
        <% var active = _u.contains(tags, tag.slug); %>
        <a class="toggle" href="<%= extraUrlFor(tag.slug, tags) %>">
          <i class="fa fa-fw <%= active ? 'fa-check-circle' : 'fa-circle-o' %>"></i>
        </a>
        <a class="<%= active ? 'active' : '' %>" href="<%= onlyUrlFor(tag.slug, licenses, tags) %>">
          <i class="<%= tag.icon %>"></i>
          <%= tag.name %>
        </a>
      </div>
    <% }); %>
  </div>

  <!-- Categories menu -->
  <div class="categories menu">
    <h3>Category</h3>
    <% _u.each(categories, function(tag) { %>
      <div class="tag">
        <% var active = _u.contains(tags, tag.slug); %>
        <a class="toggle" href="<%= extraUrlFor(tag.slug, tags) %>">
          <i class="fa fa-fw <%= active ? 'fa-check-circle' : 'fa-circle-o' %>"></i>
        </a>
        <a class="<%= active ? 'active' : '' %>" href="<%= onlyUrlFor(tag.slug, categories, tags) %>">
          <%= tag.name %>
        </a>
      </div>
    <% }); %>
  </div>

  <div class="meta menu">
    <h3>Meta</h3>
    <a href="http://github.com/devopsbookmarks/devopsbookmarks.com/issues/new">Submit a tool</a>
    <a href="http://github.com/devopsbookmarks/devopsbookmarks.com">About</a>
  </div>
</div>
